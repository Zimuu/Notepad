<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fontlayout" >
    
    <LinearLayout android:id="@+id/colour"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp">
        
	    <TextView
			android:text="@string/color"
			android:paddingTop="5dp"
			android:paddingLeft="5dp"
			android:layout_width="60dp"
			android:textSize="20sp"
			android:layout_height="wrap_content"/>
        <Spinner android:id="@+id/colorspinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/color"/>
        
    </LinearLayout>
    
	
	<LinearLayout android:id="@+id/style"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        >  
        <TextView
			android:text="@string/fontstyle"
			android:paddingTop="5dp"
			android:paddingLeft="5dp"
			android:layout_width="60dp"
			android:textSize="20sp"
			android:layout_height="wrap_content"/>
        <Spinner android:id="@+id/fontspinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/fontstyle"/>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/size"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        >  
		<TextView
			android:text="@string/size"
			android:paddingTop="5dp"
			android:paddingLeft="5dp"
			android:layout_width="60dp"
			android:textSize="20sp"
			android:layout_height="wrap_content"/>
		<EditText android:id="@+id/sizeField"
	        android:paddingTop="10dp"
	        android:inputType="number"
	        android:maxLength="2"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"/>
	</LinearLayout>

</LinearLayout>